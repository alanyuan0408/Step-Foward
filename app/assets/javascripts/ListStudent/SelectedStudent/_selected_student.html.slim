h3 class="text-blue"
    b Personal Information
br
table class="table table-hover"
    thead
        tr
            th #
            th Information
    tr
        td
            b
                | Name
        td
            span
                | {{ user.name }}
    tr
        td
            b
                | Contact Email
        td
            span ng-if="user.contact_email"
                | {{ user.contact_email}}
            span ng-if="!(user.contact_email)"
                | [No Contact Email Available]
    tr
        td
            b
                | Personal Introduction
        td
            span ng-if="user.introduction"
                | {{ user.introduction }}
            span ng-if="!(user.introduction)"
                | [No User Introduction]
    /tr ng-repeat="attribute in attributes"
    /    td
    /        | {{ attribute.sub_category_name }}
    /    td ng-show="attribute.attribute_type != 'Date'"
    /        | {{ attribute.value }}
    /    td ng-show="attribute.attribute_type == 'Date'"
    /        | {{ attribute.value | date: "yyyy-MMM-dd" }}