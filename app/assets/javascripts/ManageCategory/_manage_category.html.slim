div ng-controller="ManageCategoryCtrl"


    div class="row"
        div class="col-xs-4"
            h3 Create Requirement Category
        	hr

        	form 
        		div class="form-group"
				    label for="exampleInputEmail" Requirement Category Title
				    input class="form-control" placeholder="Category Name" ng-model="category_name"

				div class="form-group"
					button type="submit" class="btn btn-default" ng-click="create_category()" Create Category


        div class="col-xs-8"
	        h3 Requirement SubCategories

			table class="table"
				thead
			        tr
			          th # 
			          th SubCategory Name
			          th Input Type
			          th Place Holder
			          th Student Attribute
			    
				tbody
					/Top Row, Add Category Row
					tr
						th scope="row" 
							button type="submit" class="btn btn-default" ng-click="create_subcategory()"
								span class="glyphicon glyphicon glyphicon-plus" aria-hidden="true"

						td 
							input type="text" class="form-control" placeholder="Category Name" ng-model="category.sub_category_name"
						td 
							select class="form-control" ng-model="category.attribute_type"
			  					option value="Number" Number
			  					option value="Date" Date
			  					option value="Boolean" Boolean
								option value="Input Field" Input Field
						td 
							input type="text" class="form-control" placeholder="Place Holder" ng-model="category.placeholder"
						td
							button type="button" id="student_attribute" class="btn btn-default" ng-click="getCSS()" False

